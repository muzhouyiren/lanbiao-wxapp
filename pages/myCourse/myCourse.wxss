  transform: translate(-50%, -50%);
  width: 168rpx;
  height: 169rpx;
}

.operation {
  display: flex;
  font-size: 30.19rpx;
  color: #8b8b8b;
  margin-bottom: 35rpx;
}

.operation .left,
.operation .right {
